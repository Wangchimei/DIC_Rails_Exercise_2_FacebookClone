  <p class="h4 pt-2 text-dark"><%= @user.name %></p>

  <p class="h5 pt-2 text-muted"><%= @user.email %></p>

  <p class="pt-4 pb-4"><%= link_to "情報を更新", edit_user_path, class: "btn btn-secondary"%></p>
</div>
